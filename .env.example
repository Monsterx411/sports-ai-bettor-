# ========================================
# Sports AI Bettor - Environment Variables
# ========================================
# Copy this file to .env and fill in your values

# ========================================
# API KEYS (Required for live data fetching)
# ========================================

# API Sports Key
# Get your free key at: https://www.api-football.com/
API_SPORTS_KEY=YOUR_API_SPORTS_KEY_HERE

# The Odds API Key
# Get your free key at: https://theoddsapi.com/
ODDS_API_KEY=YOUR_ODDS_API_KEY_HERE

# ========================================
# APPLICATION SETTINGS
# ========================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode: true or false
DEBUG=false

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ========================================
# SPORTS BETTING PARAMETERS
# ========================================

# Default sport: soccer, basketball, tennis, baseball
DEFAULT_SPORT=soccer

# Minimum edge threshold for value bets (e.g., 0.05 = 5%)
EDGE_THRESHOLD=0.05

# Minimum confidence level for predictions (0.0 to 1.0)
MIN_CONFIDENCE=0.6

# ========================================
# MODEL SETTINGS
# ========================================

# Number of trees in RandomForest model
RANDOM_FOREST_ESTIMATORS=100

# Train/test split ratio (e.g., 0.2 = 20% test data)
TEST_SIZE=0.2

# Random state for reproducibility
RANDOM_STATE=42

# ========================================
# API & REQUEST SETTINGS
# ========================================

# Request timeout in seconds
REQUEST_TIMEOUT=10

# Maximum number of retries for failed requests
MAX_RETRIES=3

# Backoff multiplier for retries (e.g., 1.5 = 1.5s, 2.25s, 3.375s...)
RETRY_BACKOFF=1.5

# ========================================
# CACHE SETTINGS
# ========================================

# Enable caching: true or false
CACHE_ENABLED=true

# Cache time-to-live in seconds (3600 = 1 hour)
CACHE_TTL=3600

# ========================================
# DATABASE/STORAGE (Future use)
# ========================================

# DATABASE_URL=postgresql://user:password@localhost/sports_db

# ========================================
# USEFUL LINKS
# ========================================
# API Football Docs: https://www.api-football.com/documentation
# The Odds API Docs: https://theoddsapi.com/
# Streamlit Secrets: https://docs.streamlit.io/library/advanced-features/secrets-management
